@model IEnumerable<BanSachOnlineConnection.TaiKhoan>

@{
    ViewBag.Title = "TK";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sach tai khoan</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Sach
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ten</th>
                                @*<th>Noi dung</th>*@
                                <th>Mat khau</th>
                                <th>Email</th>                             
                                <th>Sua</th>
                                <th>Xoa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID_TaiKhoan</td>
                                    <td>@item.TenKhachHang_TaiKhoan</td>
                                    <td>@item.MatKhau_TaiKhoan</td>                                  
                                    <td>@item.Email_TaiKhoan</td>                                    
                                    @if (item.TenKhachHang_TaiKhoan == "admin1460372@gmail.com")
                                    {
                                        <div>#</div>
                                    }
                                    else
                                    {
                                        <td>
                                            @using (Html.BeginForm("Upd1", "Admin", FormMethod.Post))
                                            {
                                                @Html.Hidden("id", item.ID_TaiKhoan);
                                                <button type="submit" class="btn btn-warning btn-circle">
                                                    <i class="fa fa-link"></i>
                                                </button>
                                            }
                                        </td>
                                        <td>
                                            @using (Html.BeginForm("Del1", "Admin", FormMethod.Post))
                                            {
                                                @Html.Hidden("id", item.ID_TaiKhoan);
                                                <button type="submit" class="btn btn-danger btn-circle">
                                                    <i class="fa fa-times"></i>
                                                </button>
                                            }
                                        </td>
                                    }                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>



