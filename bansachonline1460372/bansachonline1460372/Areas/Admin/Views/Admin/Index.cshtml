@model DTO.DanhSachSach

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sach san pham</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Sach
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ten</th>
                                @*<th>Noi dung</th>*@
                                <th>Tac gia</th>
                                <th>Series</th>
                                <th>Nha xuat ban</th>
                                <th>Ngay xuat ban</th>
                                <th>Gia</th>
                                <th>Sua</th>
                                <th>Xoa</th>
                            </tr>
                        </thead>
                        <tbody>
                             @foreach (var item in Model.dsctSach)
                             {                              
                                <tr>                               
                                    <td>@item.Sach.ID_Sach</td>
                                    <td>@item.Sach.Ten_Sach</td>
                                    @*<td>@item.Sach.NoiDung_Sach</td>*@
                                    <td>@item.TacGia.Ten_TacGia</td>
                                    <td>@item.Series.Ten_Series</td>
                                    <td>@item.NhaXuatBan.Ten_NhaXuatBan</td>
                                    <td>@item.Sach.NgayXuatBan_Sach</td>
                                    <td>@item.Sach.Gia_Sach</td>
                                    <td>
                                        @using (Html.BeginForm("Upd", "Admin", FormMethod.Post))
                                        {
                                            @Html.Hidden("id", item.Sach.ID_Sach);
                                            <button type="submit" class="btn btn-warning btn-circle">
                                                <i class="fa fa-link"></i>
                                            </button>
                                        }
                                    </td>
                                    <td>                                       
                                        @using (Html.BeginForm("Del", "Admin", FormMethod.Post))
                                        {
                                            @Html.Hidden("id", item.Sach.ID_Sach);
                                            <button type="submit" class="btn btn-danger btn-circle">
                                                <i class="fa fa-times"></i>
                                            </button>
                                        }                                       
                                    </td>                            
                                </tr>
                             }                        
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->    
</div>


