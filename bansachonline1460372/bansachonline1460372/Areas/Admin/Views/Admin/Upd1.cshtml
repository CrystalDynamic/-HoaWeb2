
@model BanSachOnlineConnection.TaiKhoan

@{
    ViewBag.Title = "Upd1";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                cap nhat @Model.TenKhachHang_TaiKhoan
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ten</th>
                                @*<th>Tac gia</th>
                                    <th>Series</th>
                                    <th>Nha xuat ban</th>*@
                                <th>Mat Khau</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @using (Html.BeginForm("UpdAccount", "Admin", FormMethod.Post))
                            {
                                <tr>
                                    @Html.Hidden("id", Model.ID_TaiKhoan)
                                    @Html.AntiForgeryToken()
                                    <td><input name="ten" value="@Model.TenKhachHang_TaiKhoan" type="text" class="form-control" /></td>
                                    <td><input name="matkhau" value="@Model.MatKhau_TaiKhoan" type="text" class="form-control" /></td>
                                    <td><input name="email" value="@Model.Email_TaiKhoan" type="text" class="form-control" /></td>
                                    <td><input type="submit" value="cap nhat" class="btn btn-success" /></td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

