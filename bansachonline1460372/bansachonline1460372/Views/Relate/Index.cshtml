@model IEnumerable<BanSachOnlineConnection.Sach>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <h4>
            <a>San pham lien quan</a>
        </h4>
        <div>
            <ul style="width: auto; display: block; white-space: nowrap; overflow: auto; ">
                @foreach (var item in Model)
                {
                    <li style="display: inline-block;">
                        <a class="thumbnail" href='@Url.Action("Details", "Product", new { id = item.ID_Sach })'>
                            <img class="img-responsive" src='@Url.Content(@item.TrangBia_Sach)' />
                        </a>
                        @*<img src="@item.TrangBia_Sach" />*@
                    </li>
                }                
            </ul>
        </div>
    </div>
</div>



