
@model BanSachOnline_1460372.Models.ShowModel.SachShowModel

@{
    ViewBag.Title = "Details";
}

<div class="row">    
    <div class="panel panel-green">
        <div class="panel-heading">
            @Model.Sach.Ten_Sach
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="thumbnail">
                        <img class="img-responsive" src="@Model.Sach.TrangBia_Sach" alt="">
                    </div>                    
                </div>
                <div class="col-lg-8">
                    <div class="caption-full">
                        <h4 class="pull-right">$@Model.Sach.Gia_Sach</h4>
                        <h4>
                            <a>@Model.Sach.Ten_Sach</a>
                        </h4>

                        <p>Noi dung: @Model.Sach.NoiDung_Sach</p>
                        <p>Tac Gia: @Html.ActionLink(Model.TacGia.Ten_TacGia, "Author", new { id = Model.TacGia.ID_TacGia })</p>
                        <p>The Loai: @{
                            foreach (var item in Model.TheLoai)
                            {                                
                                <a>@Html.ActionLink(item.Ten_TheLoai, "Genre", new { id = item.ID_TheLoai })</a>
                            }
                        }
                        </p>
                        <p>Nha Xuat Ban: @Html.ActionLink(Model.NhaXuatBan.Ten_NhaXuatBan, "Publisher", new { id = Model.NhaXuatBan.ID_NhaXuatBan })</p>
                        <p>Ngay Xuan Ban: @Model.Sach.NgayXuatBan_Sach</p>
                    </div>
                    <div class="ratings">
                            <p class="pull-right">reviews: @Model.Sach.SoLuongBinhLuan_Sach</p>
                            <p>
                                @for (int i = 0; i < Model.Sach.SoLuongDanhGia_Sach; i++)
                                {
                                    <span class="glyphicon glyphicon-star"></span>
                                }
                                @for (int i = 0; i < (5 - Model.Sach.SoLuongDanhGia_Sach); i++)
                                {
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                }
                            </p>
                        </div>

                    @*<button class="add-to-cart">
