@model PetaPoco.Page<BanSachOnlineConnection.Sach>

@{
    ViewBag.Title = "Author";
}



    <div class="row">

        <div class="col-lg-12">
            <h1 class="page-header">...</h1>
        </div>

        <!-- /.row -->
        <!-- Projects Row -->

        @foreach (var item in Model.Items)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" href='@Url.Action("Details", "Product", new { id = item.ID_Sach })'>
                    <img class="img-responsive" src='@Url.Content(@item.TrangBia_Sach)' />
                </a>
            </div>
        }


        <!-- /.row -->
        @{
            var le = 0;
            if (Model.TotalItems % 8 != 0) { le = 1; }
        }
        <div class="row">
            <!-- Pagination -->


            <div class="row text-center">
                <div class="col-lg-12">
                    <ul class="pagination">
                        @for (int i = 1; i <= (Model.TotalItems / 8 + le); i++)
                        {
                            <li class="active">
                                @Html.ActionLink(i.ToString(), "Author", new { page = i })
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </div>

    </div>

