@model PetaPoco.Page<BanSachOnlineConnection.Sach>


@{
    ViewBag.Title = "List";
}

<div class="row">

        <div class="col-lg-12">
            <h1 class="page-header">DANH SACH sach hien co cua cua hang</h1>
        </div>

        <!-- /.row -->
        <!-- Projects Row -->

        @foreach (var item in Model.Items)
        {
            <div class="col-lg-3 col-md-3 col-xs-2 thumb">
                <a class="thumbnail" href='@Url.Action("Details", "Product", new { id = item.ID_Sach })'>
                    <img class="img-responsive" src='@Url.Content(@item.TrangBia_Sach)' />                    
                </a>
            </div>
            
        }


        <!-- /.row -->
    @{        
        var le = 0;
        if (Model.TotalItems % 12 != 0) { le = 1; }
    }
        <div class="row">
            <!-- Pagination -->
            <div class="row text-center">
                <div class="col-lg-12">
                    <ul class="pagination">

                        @for (int i = 1; i <= (Model.TotalItems / 12 + le); i++)
                        {
                            <li class="active">
                                @Html.ActionLink(i.ToString(), "List", new { page = i })
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </div>

    </div>



