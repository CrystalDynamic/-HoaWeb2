@model IEnumerable<BanSachOnlineConnection.Sach>

<div class="row">
    @foreach (var item in Model.Take(6))
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">

                <a href='@Url.Action("Details", "Product", new { id = item.ID_Sach })'>
                    <img src='@Url.Content(@item.TrangBia_Sach)' />
                </a>

                <div class="caption">
                    <h4 class="pull-right">$@item.Gia_Sach</h4>
                    <h4>
                        <a>@Html.ActionLink(item.Ten_Sach, "Details", new { id = item.ID_Sach })</a>
                    </h4>
                    <p>@item.NoiDung_Sach</p>
                </div>

            </div>
        </div>
    }
</div>

