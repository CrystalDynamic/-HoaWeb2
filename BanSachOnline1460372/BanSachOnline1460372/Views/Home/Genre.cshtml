@model PetaPoco.Page<BanSachOnlineConnection.Sach>

@{
    ViewBag.Title = "Genre";
}


<div class="container">

    <div class="row">

        <div class="col-lg-12">
            <h1 class="page-header">...</h1>
        </div>

        <!-- /.row -->
        <!-- Projects Row -->

        @foreach (var item in Model.Items)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" href='@Url.Action("Details", "Home", new { id = item.recID })'>
                    <img class="img-responsive" src='@Url.Content(@item.TrangBia)' />
                </a>
            </div>
        }


        <!-- /.row -->

        <div class="row">
            <!-- Pagination -->


            <div class="row text-center">
                <div class="col-lg-12">
                    <ul class="pagination">
                        @for (int i = 1; i <= (Model.TotalItems / 4); i++)
                        {
                            <li class="active">
                                @Html.ActionLink(i.ToString(), "Genre", new { page = i })
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </div>

    </div>
</div>


